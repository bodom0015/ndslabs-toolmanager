#!/bin/bash

echo $*

# $1 dataset download URL
# $2 dataset ID
# $3 clowder access key
# $4 destination directory path

echo curl --connect-timeout 10 -k -o $4/data/dataset.zip -L $1?key=$3
mkdir -p $4/data/
curl --connect-timeout 10 -k -o $4/data/dataset.zip -L $1?key=$3 > $4/data/transfer-log_$2 2>&1
chmod -R 777 $4
mkdir  $4/data/$2
unzip -o $4/data/dataset.zip -d $4/data/$2
rm $4/data/dataset.zip
